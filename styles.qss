/* ShiwaDiffPHC Modern Dark Theme */

/* Main Window */
QMainWindow {
    background-color: #2b2b2b;
    color: #ffffff;
}

/* Central Widget */
QWidget {
    background-color: #2b2b2b;
    color: #ffffff;
    font-family: "Segoe UI", Arial, sans-serif;
    font-size: 9pt;
}

/* Group Boxes */
QGroupBox {
    font-weight: bold;
    border: 2px solid #555555;
    border-radius: 8px;
    margin-top: 1ex;
    padding-top: 10px;
    background-color: #3c3c3c;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 5px 0 5px;
    color: #4fc3f7;
    font-size: 10pt;
    font-weight: bold;
}

/* Buttons */
QPushButton {
    background-color: #4fc3f7;
    border: none;
    border-radius: 6px;
    color: #000000;
    font-weight: bold;
    padding: 8px 16px;
    min-height: 20px;
}

QPushButton:hover {
    background-color: #29b6f6;
}

QPushButton:pressed {
    background-color: #0288d1;
}

QPushButton:disabled {
    background-color: #555555;
    color: #888888;
}

/* Start/Stop Buttons */
QPushButton#startButton {
    background-color: #4caf50;
    color: white;
}

QPushButton#startButton:hover {
    background-color: #45a049;
}

QPushButton#stopButton {
    background-color: #f44336;
    color: white;
}

QPushButton#stopButton:hover {
    background-color: #da190b;
}

/* Spin Boxes */
QSpinBox {
    background-color: #404040;
    border: 2px solid #555555;
    border-radius: 4px;
    padding: 4px;
    color: #ffffff;
    selection-background-color: #4fc3f7;
}

QSpinBox:hover {
    border-color: #4fc3f7;
}

QSpinBox:focus {
    border-color: #4fc3f7;
    outline: none;
}

/* Check Boxes */
QCheckBox {
    color: #ffffff;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border-radius: 3px;
    border: 2px solid #555555;
    background-color: #404040;
}

